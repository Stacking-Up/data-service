{
  "name": "data-service",
  "private": true,
  "main": "index.js",
  "scripts": {
    "start": "node index.js",
    "test:unit": "mocha ./tests/index.test.js --timeout 100000 -s 20",
    "test:integration": "echo \"Error: no test specified\" && exit 1",
    "coverage": "nyc --reporter=lcov npm run test:unit",
    "cov": "nyc npm run test:unit",
    "lint": "semistandard",
    "lint-fix": "semistandard --fix",
    "precommit": "npm run lint-fix && npm run cov",
    "generate-schema": "cat ./prisma/models.prisma > ./prisma/schema.prisma && npx prisma generate",
    "generate-schema:dev": "cat ./prisma/dev.prisma ./prisma/models.prisma > ./prisma/schema.prisma && npx prisma generate",
    "schema-docs": "npm run generate-schema:dev && npx prisma-docs-generator serve"
  },
  "dependencies": {
    "@prisma/client": "^3.10.0",
    "express": "^4.16.3",
    "js-yaml": "^3.3.0",
    "oas-tools": "^2.1.4"
  },
  "devDependencies": {
    "mocha": "^9.2.1",
    "nyc": "^15.1.0",
    "prisma": "^3.10.0",
    "prisma-dbml-generator": "^0.8.3",
    "prisma-docs-generator": "^0.5.0",
    "semistandard": "^16.0.1"
  },
  "semistandard": {
    "ignore": [
      "/tests/**",
      "/prisma/**"
    ]
  },
  "nyc": {
    "exclude": [
      "tests",
      "server.js",
      "prisma"
    ]
  }
}
